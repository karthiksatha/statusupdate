<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Task perform today</th>
      <th>Git link</th>
      <th>Jira link</th>
      <th>Remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.content %></td>
        <td><%= task.task_perform_today %></td>
        <td><%= task.git_link %></td>
        <td><%= task.jira_link %></td>
        <td><%= task.remarks %></td>
        <td><%= link_to 'Show', task %></td>
       
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
